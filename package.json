  "author": "Daily Bruin Onlien <online@dailybruin.com>",
  "license": "MIT",
  "scripts": {
    "postcheckout": "yarn",
    "precommit": "lint-staged"
  },
  "babel": {
    "presets": ["env"]
  },
  "eslintConfig": {
    "extends": "uclaradio"
  },
  "stylelint": {
    "extends": "@uclaradio/stylelint-config-uclaradio"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,scss,json,md}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "@uclaradio/stylelint-config-uclaradio": "^1.0.5",
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "del": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-uclaradio": "^1.0.17",
    "gulp": "^3.9.1",
    "gulp-csso": "^3.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^4.0.0",
    "gulp-nunjucks-render": "^2.2.1",
    "gulp-postcss": "^7.0.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "htmlhint": "^0.9.13",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "stylelint": "^8.2.0",
    "webpack-stream": "^4.0.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.2",
    "gray-matter": "^3.1.1",
    "lodash": "^4.17.4",
    "marked": "^0.3.6"
  }
